double fRand(double fMin, double fMax)
{
    double f = (double)rand() / RAND_MAX;
    return fMin + f * (fMax - fMin);
}

class BaseFighter {
public:
    string name;
    Weapon *weapon;
    double HP;
    double regenHP;


    BaseFighter() {
        name = "None";
        weapon = new Weapon;
      HP=100;
      regenHP=.5;
    }

    virtual double attack(){
        return weapon->use();
    }
friend double fRand(double, double);
    virtual string Print(){
      string temp = "";
      temp += "["; 
      temp += name;
      temp+= " , ";
      temp+= "[";
      temp+= weapon->getName();
      temp+=" , ";
      temp+= weapon->getDamage();
      temp+= "]";
      temp+= "]";
      return temp;
    }
    friend ostream& operator<<(ostream& os, const BaseFighter& f) {
        return os << "[" << f.name << " , " << *f.weapon << "]";
    }
string getname(){
  return name;
}
 void setHp(double hp)
{ 
  HP = hp; 
}
void setRR(double RH) 
{ 
  RH = RH;
}
void Damage(int x) 
{ 
  HP -= x; 
}

void attack(BaseFighter *other) 
{
  other->Damage(weapon->use());
}
void regen() 
{ 
HP += regenHP;
}
bool alive() 
{ 
return HP > 0; 
}
int getHp() 
{ 
  return HP; 
}


};

